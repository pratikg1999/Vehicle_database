<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="10dp"
    android:layout_marginVertical="7dp"
    android:padding="15dp"
    app:cardBackgroundColor="@android:color/white"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_marginHorizontal="15dp"
            android:layout_height="match_parent"
            android:padding="5dp">

            <androidx.cardview.widget.CardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="0dp"
                app:cardCornerRadius="5dp"
                app:cardElevation="0dp">



            <ImageView
                android:src="@drawable/ic_car"
                android:scaleType="fitXY"
                android:id="@+id/iv_photo"
                android:layout_width="100dp"
                android:layout_height="100dp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_weight="4"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:orientation="vertical"
                android:layout_gravity="right|top">

            <ImageButton
                android:id="@+id/bt_img_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/img_button_bg_onpressed"
                android:src="@drawable/ic_edit_black_24dp" />
                <ImageButton
                    android:id="@+id/bt_img_delete"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/img_button_bg_onpressed"
                    android:src="@drawable/ic_delete_black_24dp" />
            </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical">

            <TextView
                android:textStyle="bold"
                android:id="@+id/tv_make_model"
                android:layout_margin="2dp"
                android:textSize="22sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Vehicle make"/>

            <TextView
                android:id="@+id/tv_variant"
                android:layout_margin="2dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Variant"/>

        </LinearLayout>
            <TextView
                android:layout_gravity="bottom|left"
                android:backgroundTint="@android:color/holo_red_light"
                android:id="@+id/tv_number"
                android:layout_marginVertical="18dp"
                android:layout_marginHorizontal="5dp"
                android:paddingHorizontal="5dp"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_view_bg_red"
                android:hint="Number"/>
        </FrameLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>